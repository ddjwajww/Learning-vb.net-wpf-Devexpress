<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenFile_and_SaveFile_Dialogs"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>File Name</Label>
            <TextBox x:Name="txtFileName" FontSize="16" Width="450"></TextBox>
        </StackPanel>

        <Button FontSize="16" Click="Button_Click">Open File</Button>
        <Button FontSize="16" Click="Button_Click_1">Save File</Button>

        <ListBox x:Name="lstFiles">
            
        </ListBox>
    </StackPanel>
</Window>
