<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Using_Images"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid ShowGridLines="true" x:Name="theGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image HorizontalAlignment="Center" Height="216" VerticalAlignment="Center" Width="400" Source="foto.jpeg" Stretch="UniformToFill"/>
        <Image Grid.Row="0" Grid.Column="1" Source="foto2.jpg" Stretch="UniformToFill"></Image>
        

        <StackPanel Grid.Row="1" Grid.Column="0">
            <TextBox x:Name="txtImage"></TextBox>
            <Button Click="Button_Click">Add Image</Button>
        </StackPanel>
    </Grid>
</Window>
